extends layouts/_layout.pug

block variables
	- var activePage = 'form-components'
	- var activeGroup = 'forms'

block title
	title Form Components - Vali Admin

block content
	.app-title
		div
			h1
				i.fa.fa-edit
				|  Adding news
			p Tell us about some interesting event that happened in the world or country. Don't forget the rules!

	.row
		.col-md-12
			.tile
				form(method='post', action='/admin/news/add')
					.form-group
						label(for='exampleInputEmail1') News title
						input#exampleInputEmail1.form-control(name='title', type='text', placeholder='Enter news title')
						small#emailHelp.form-text.text-muted Come up with the most concise title to attract the reader. Remember, clickbait is punishable!
					.form-group
						label(for='exampleSelect1') Select category
						select#exampleSelect1.form-control(name='category')
							each category in newscategory
								option(value= category._id) #{category.title}
					.form-group
						label(for='textarea') Example textarea
						textarea#my-expressjs-tinymce-app.form-control(name='body', rows='3')
					.form-group
						label(for='exampleInputFile') File input
						input#exampleInputFile.form-control-file(type='file', aria-describedby='fileHelp')
						small#fileHelp.form-text.text-muted
							| This is some placeholder block-level help text for the above input. It's a bit lighter and easily wraps to a new line.
					.tile-footer
						button.btn.btn-primary(type='submit') Submit