.app-sidebar__overlay(data-toggle="sidebar")
aside.app-sidebar

	.app-sidebar__user
		img.app-sidebar__user-avatar.img-thumbnail(src= user.avatar, alt='User Image')
		div
			p.app-sidebar__user-name= user.name
			p.app-sidebar__user-designation= user.role
	ul.app-menu
		li
			a.app-menu__item(href='/admin' class={'active': activePage == 'dashboard'})
				i.app-menu__icon.fa.fa-dashboard
				span.app-menu__label Main


		li.treeview(class={'is-expanded': activeGroup == 'articles'})
			a.app-menu__item(href='#' data-toggle='treeview')
				i.app-menu__icon.fa.fa-book
				span.app-menu__label Articles
				i.treeview-indicator.fa.fa-angle-right
			ul.treeview-menu
				li
					a.treeview-item(href='/admin/articles/add' class={'active': activePage == 'table-news'})
						i.icon.fa.fa-circle-o
						|  Add article
				li
					a.treeview-item(href='/admin/articles' class={'active': activePage == 'table-articles'})
						i.icon.fa.fa-circle-o
						|  Articles				
		li.treeview(class={'is-expanded': activeGroup == 'news'})
			a.app-menu__item(href='#' data-toggle='treeview')
				i.app-menu__icon.fa.fa-newspaper-o
				span.app-menu__label News
				i.treeview-indicator.fa.fa-angle-right
			ul.treeview-menu
				li
					a.treeview-item(href='/admin/news/add' class={'active': activePage == 'table-news'})
						i.icon.fa.fa-circle-o
						|  Add news
				li
					a.treeview-item(href='/admin/news' class={'active': activePage == 'table-news'})
						i.icon.fa.fa-circle-o
						|  News list
		li.treeview(class={'is-expanded': activeGroup == 'users'})
			a.app-menu__item(href='#' data-toggle='treeview')
				i.app-menu__icon.fa.fa-th-list
				span.app-menu__label News categories
				i.treeview-indicator.fa.fa-angle-right
			ul.treeview-menu
				li
					a.treeview-item(href='/admin/news-categories' class={'active': activePage == 'form-components'})
						i.icon.fa.fa-circle-o
						|  News categories list
		li.treeview(class={'is-expanded': activeGroup == 'users'})
			a.app-menu__item(href='#' data-toggle='treeview')
				i.app-menu__icon.fa.fa-address-book
				span.app-menu__label Users
				i.treeview-indicator.fa.fa-angle-right
			ul.treeview-menu
				li
					a.treeview-item(href='/admin/users' class={'active': activePage == 'form-components'})
