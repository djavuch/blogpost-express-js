extends ../admin/layouts/_layout

block variables
	- var activePage = 'dashboard'
	- var activeGroup = 'none'

block content
	.app-title
		div
			h1
				i.fa.fa-dashboard
				|  Dashboard
			p Admin panel

		ul.app-breadcrumb.breadcrumb
			li.breadcrumb-item
				i.fa.fa-home.fa-lg
			li.breadcrumb-item
				a(href='/admin') Main page

	.row
		.col-md-6.col-lg-3
			.widget-small.primary.coloured-icon
				i.icon.fa.fa-users.fa-3x
				div.info
					h4 Users
					p
						b #{users}

		.col-md-6.col-lg-3
			.widget-small.info.coloured-icon
				i.icon.fa.fa-newspaper-o.fa-3x
				div.info
					h4 News
					p
						b #{news}

		.col-md-6.col-lg-3
			.widget-small.warning.coloured-icon
				i.icon.fa.fa-book.fa-3x
				div.info
					h4 Articles
					p
						b #{articles}

		.col-md-6.col-lg-3
			.widget-small.danger.coloured-icon
				i.icon.fa.fa-comments.fa-3x
				div.info
					h4 Comments
					p
						b #{sumComments}

	.row

		.col-md-6
			.tile
				h3.tile-title Features

				ul
					li Built with Bootstrap 4, PUG.js, MongoDb (Mongoose) and Node.js
					li A full news feed with the ability to comment
					li A complete opportunity to maintain a personal blog
					li User registration and email address confirmation
					li There is an option to fix the breaking news