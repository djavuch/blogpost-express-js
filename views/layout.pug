          a.p-2.text-muted(href='#') Technology
          a.p-2.text-muted(href='#') Design
          a.p-2.text-muted(href='#') Culture
          a.p-2.text-muted(href='#') Business
          a.p-2.text-muted(href='#') Politics
          a.p-2.text-muted(href='#') Opinion
          a.p-2.text-muted(href='#') Science
          a.p-2.text-muted(href='#') Health
          a.p-2.text-muted(href='#') Style
          a.p-2.text-muted(href='#') Travel
      include jumbotron
    main.container(role='main')
      .row
        .col-md-8.blog-main
          h3.pb-4.mb-4.font-italic.border-bottom
            | From the Firehose
          block content
          // /.blog-post
          nav.blog-pagination
            a.btn.btn-outline-primary.m-1(href='#') Older
            a.btn.btn-outline-secondary.disabled.m-1(href='#' tabindex='-1' aria-disabled='true') Newer
