  body
    .container
      include alert
      header.blog-header.py-3
        .row.flex-nowrap.justify-content-between.align-items-center
          .col-4.pt-1
            a.text-muted(href='#') Subscribe
          .col-4.text-center
            a.blog-header-logo.text-dark(href='/') Blog about nothing and everything
          .col-4.d-flex.justify-content-end.align-items-center
            a.text-muted(href='#' aria-label='Search')
              svg.mx-3(xmlns='http://www.w3.org/2000/svg' width='20' height='20' fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' role='img' viewBox='0 0 24 24' focusable='false')
                title Search
                circle(cx='10.5' cy='10.5' r='7.5')
                path(d='M21 21l-5.2-5.2')
            if user      
              a.btn.btn-sm.btn-outline-secondary(href='/users/logout') Logout
            else 
              a.btn.btn-sm.btn-outline-secondary(href='/users/login') Login
              a.btn.btn-sm.btn-outline-secondary(href='/users/register') Register
      .nav-scroller.py-1.mb-2
        nav.nav.d-flex.justify-content-between
          a.p-2.text-muted(href='#') World
